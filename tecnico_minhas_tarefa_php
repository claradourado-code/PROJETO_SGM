    <div class="card shadow-sm">
        <div class="card-body">
            <?php if (count($tarefas) > 0): ?>
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Prioridade</th>
                            <th>Prazo</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php foreach ($tarefas as $tarefa): ?>
                            <tr>
                                <td>#<?= htmlspecialchars($tarefa['id']) ?></td>
                                <td>
                                    <strong><?= htmlspecialchars($tarefa['titulo']) ?></strong><br>
                                    <small class="text-muted"><?= htmlspecialchars(substr($tarefa['descricao'], 0, 50)) ?>...</small>
                                </td>
                                <td>
                                    <?php 
                                    $classe = match($tarefa['prioridade']) {
                                        'Alta' => 'prioridade-alta',
                                        'Media' => 'prioridade-media',
                                        default => 'prioridade-baixa',
                                    };
                                    ?>
                                    <span class="<?= $classe ?>"><?= htmlspecialchars($tarefa['prioridade']) ?></span>
                                </td>
                                <td><?= date('d/m/Y', strtotime($tarefa['data_prazo'])) ?></td>
                                <td><span class="badge bg-info text-dark"><?= htmlspecialchars($tarefa['status']) ?></span></td>
                                <td>
                                    <a href="detalhe_tarefa.php?id=<?= $tarefa['id'] ?>" class="btn btn-sm btn-primary">Ver</a>
                                    <a href="concluir_tarefa.php?id=<?= $tarefa['id'] ?>" class="btn btn-sm btn-success">Concluir</a>
                                </td>
                            </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>
            <?php else: ?>
                <div class="alert alert-success text-center">
                    Nenhuma tarefa pendente no momento. Bom trabalho!
                </div>
            <?php endif; ?>
